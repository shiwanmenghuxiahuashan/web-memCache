{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": [
      "es2015",
      "dom"
    ],
    "strict": true,
    "moduleResolution": "node", // 设置模块解析为 node
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "files": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}